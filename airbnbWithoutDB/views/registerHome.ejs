<%- include("partials/head") %>
  <body>
    <%- include("partials/navBar") %>
    <main class="flex items-center justify-center mx-10 mt-5">
      <div class="w-full p-10 mt-5 rounded-md shadow-2xl">
        <h1 class="text-xl font-semibold text-center text-red-500">
          Register your Home on AirBnB
        </h1>
        <form
          class="flex flex-col items-center justify-center m-3"
          action="/registerHome"
          method="POST"
        >
          <input
            class="w-full p-2 my-1 border rounded-md"
            type="text"
            id="houseName"
            name="houseName"
            placeholder="Enter your House Name..."
          />
          <button
            class="w-full p-2 my-1 font-semibold text-white bg-red-500 border rounded-md"
            type="submit"
          >
            Register
          </button>
        </form>
      </div>
    </main>
  </body>
</html>
