<li class="flex items-center justify-center w-full p-3 lg:w-96">
  <div
    class="flex flex-col items-center justify-center w-[360px] rounded-md shadow-xl"
  >
    <div class="w-[360px] h-[240px] relative">
      <img
        class="w-[360px] h-[240px] object-fill rounded-t-md"
        src="<%= home.housePhotoURL %>"
        alt="housePhoto"
      />
      <% if(currentPage !== "hostHomesList") {%>
        <%- include("favorites", {home:home}, favorites); %>
      <% } %>
    </div>
    <div class="flex items-center justify-between w-full p-3">
      <ul class="flex flex-col items-start justify-start w-full">
        <li
          class="flex items-center justify-between w-full text-2xl font-semibold"
        >
          <div><%= home.houseName %></div>
          <div class="flex items-center text-xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-5 h-5 mr-1 text-yellow-400"
            >
              <path
                fill-rule="evenodd"
                d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                clip-rule="evenodd"
              />
            </svg>
            <%= home.houseRating %>
          </div>
        </li>
        <li class="w-full text-xl font-semibold text-neutral-500">
          <%= home.houseLocation %>
        </li>
        <li class="flex items-center justify-between w-full">
          <div class="text-2xl font-semibold text-red-500">
            â‚¹ <%= home.housePricePerNight %><span> / night</span>
          </div>
          <div class="flex items-center justify-center">
            <% if(currentPage === "hostHomesList") {%>
            <a
              class="p-2 mr-1 text-sm font-semibold text-white bg-blue-500 border border-blue-500 rounded-md hover:bg-white hover:text-blue-500"
              href="/editHome/<%= home._id %>?editing=true"
            >
              Edit
            </a>
            <form method="POST" action="/deleteHome/<%= home._id %>">
              <button
                class="p-2 text-sm font-semibold text-white bg-red-800 border border-red-800 rounded-md hover:bg-white hover:text-red-800"
                type="submit"
              >
                Delete
              </button>
            </form>
            <% } else { %>
            <button
              class="p-2 mr-1 text-sm font-semibold text-white bg-green-600 border border-green-600 rounded-md hover:bg-white hover:text-green-600"
            >
              Book
            </button>
            <a href="/homeDetails/<%= home._id %>"
              ><button
                class="p-2 text-sm font-semibold text-white bg-blue-800 border border-blue-800 rounded-md hover:bg-white hover:text-blue-800"
              >
                Details
              </button>
            </a>
            <% } %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</li>
